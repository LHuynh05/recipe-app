<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/ingredient.css">
</head>
<body>
   
    <nav>
        <a href="/recipes">Back to your recipes</a>
    </nav>   
    <h1><%= recipeName.recipeName %> Ingredients</h1>
    <ul>
        <% ingredients.forEach( el => { %>
            <li class='ingredientItem' data-id='<%=el._id%>'>
                <span class="<%= el.completed === true ? 'completed' : 'not'%>"> <%= el.ingredient %></span>
                <span class='del'> Delete </span>
            </li>
    <% }) %>    
    </ul>

    <h2><%= user.userName %>, you have <%= count %> things left to get.</h2>

    <form action="/ingredients/createIngredient/<%= recipeName.recipeName %>" method='POST'>
        <input type="text" placeholder="Enter Todo Item" name='ingredientItem'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <script src="/js/main.js"></script>
    <script src="/js/ingredient.js"></script>
</body>
</html>